meta(charset='UTF-8')
meta(http-equiv='content-language', content='pt-br')
meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, minimal-ui')
meta(http-equiv='X-UA-Compatible', content='ie=edge')

title=title

style
  include ../includes/bundle.css

meta(name='description', content=description)
meta(name='robots', content='index,follow')
meta(http-equiv='cache-control', content='cache')
meta(http-equiv='revisit-after', content='1 day')
link(rel='manifest', href=homepage + '/manifest.json')
base(href='/')

meta(name='mobile-web-app-capable' content='yes')
meta(name='application-name' content=title)

meta(property='og:title', content=title)
meta(property='og:locale', content='pt_BR')
meta(property='og:type', content='website')
meta(property='og:url', content=homepage)
meta(property='og:image', content=homepage + '/assets/images/share.png')
meta(property='og:image:type', content='image/jpeg')
meta(property='og:image:width', content='800')
meta(property='og:image:height', content='600')
meta(property='og:description', content=description)
meta(property='og:site_name', content=name)
//- meta(property='fb:admins', content='Facebook numeric ID')
meta(itemprop='name', content=name)
meta(itemprop='description', content=description)
meta(name='twitter:card', content='summary_large_image')
meta(name='twitter:site', content='@' + author.twitter)
meta(name='twitter:title', content=title)
meta(name='twitter:description', content=description)
meta(name='twitter:creator', content='@' + author.twitter)
meta(name='twitter:image:src', content=homepage + '/assets/images/share.png')
